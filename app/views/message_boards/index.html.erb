<div class="message-board-index">
  <div class="container mt-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-2 mt-5"></div>
      <div class="col-md-8 mt-5">
        <h1>Your Message Board</h1>
        <br>
        <table class="table table-hover table-bordered table-light">
          <thead class="thead-dark">
            <tr>
              <% if current_user.user? %>
                <th scope="col">Agencies</th>
              <% else %>
                <th scope="col">User</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% if @existing_message_boards_users %>
              <% @existing_message_boards_users.each do |other_user| %>
                <% if other_user != current_user %>
                  <tr>
                    <td>
                      <%= link_to(user_message_boards_path(current_user, other_user: other_user.id), method: :post) do %>
                        <%= other_user.name %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-2 mt-5"></div>
    </div>
  </div>
</div>
