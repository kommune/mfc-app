<% if @user.errors.any? %>
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="alert alert-info col-md-6" role="alert">
        <h4>We have some errors here !</h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li class="mb-0"><%= msg %></li>
            <% end %>
          </ul>
        <hr>
      </div>
    </div>
  </div>
<% end %>

<div class="container ">
  <div class="row d-flex justify-content-center">
  <div class="col-md-7">
    <%= form_for [:admin, @user] do |f| %>
    <div class="card mt-3 mb-3">
      <div class="card-header">
        <h4>User Profile</h4>
      <div class="card-body">
        <form>
        
          <div class="form-group">
            <%= f.label :username, "Username" %>
            <%= f.text_field :username, class: "form-control", disabled: true %>
          </div>

          <div class="form-group">
            <%= f.label :email, "E-mail" %>
            <%= f.text_field :email, class: "form-control", disabled: true %>
          </div>

          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :postal_code, "Postal Code" %>
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :birth_date, "Date of Birth" %>
            <%= f.date_select :birth_date, start_year: 1920, end_year: Date.today.year, order: [:day, :month, :year], default: Date.today, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :gender, "Gender" %>
            <%= f.select :gender, User.genders.keys.map{ |w| [w.humanize, w] }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :marital_status, "Marital Status" %>
            <%= f.select :marital_status, User.marital_statuses.keys.map{ |w| [w.humanize, w] }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :children, "Children" %>
            <%= f.select :children, User.children.keys.map{ |w| [w.humanize, w] }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= link_to 'Back Index', admin_users_path, class: 'btn btn-info'%> 
            <%= f.submit class: "btn btn-primary" %>
          </div>
        </form>
      </div>
      </div>
    </div>
     <% end %>
  </div>

  </div>
</div