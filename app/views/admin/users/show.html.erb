<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to 'All Users', admin_users_path %>
    </li>
        <li class="breadcrumb-item">
      <%= link_to 'Public Users', public_admin_users_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to 'Agency Users', agency_admin_users_path %>
    </li>
    <li class="breadcrumb-item active">User Infomation</li>
  </ol>
  <div class="row d-flex justify-content-center">
    <div class="col-md-7">
      <div class="card mt-3">
        <div class="card-header">
          <h4><%= @user.name %></h4>
        <div class="card-body">

          <p>
            <strong>Username:</strong>
            <%= @user.username %>
          </p>

          <p>
            <strong>E-mail:</strong>
            <td><%= @user.email%></td>
          </p>
          <p>
            <strong>Postal Code:</strong>
            <td><%= sprintf('%06i', @user.postal_code) %></td>
          </p>
          <p>
            <strong>Date of birth:</strong>
            <td><%= @user.birth_date %></td>
          </p>
          <p>
            <strong>Gender:</strong>
            <td><%= @user.gender.capitalize %></td>
          </p>
          <p>
            <strong>Marital Status:</strong>
            <td><%= @user.marital_status.capitalize %></td>
          </p>
          <p>
            <strong>Children:</strong>
            <td><%= @user.children.capitalize %></td>
          </p>
        </div>
          <%= link_to 'Edit User', edit_admin_user_path(@user), class: 'btn btn-primary'%>
          <%= link_to 'Delete', admin_user_path(@user), method: :delete, data: {confirm:"Are you sure?"}, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>





