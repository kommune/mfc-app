<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Categories</li>
  </ol>
  <div class="row">
    <div class="col-md-12">
      <div class="form-inline" >
        <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name",  class: "form-control mr-2" %>
            <%= f.submit class: "btn btn-primary mr-2" %>
          <% if @category.errors.any? %>
            <%= @category.errors.full_messages.to_sentence %>
          <% end %>
          </div>
        <% end %>
      </div>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <th scope="row"><%= category.id %></th>
              <td><%= category.name %></td>
              <td>
              <%= link_to 'Edit', edit_admin_category_path(id: category.id) %>
              <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
