<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Agencies</li>
    <li class="breadcrumb-item">
      <%= link_to 'New Agency', new_admin_agency_path %>
    </li>
  </ol>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>

            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @agencies.each do |agency| %>
          <tr>
            <td><%= agency.name %></td>
            <td>
              <%= link_to 'Show', admin_agency_path(agency) %>
              <%= link_to 'Edit', edit_admin_agency_path(agency) %>
              <%= link_to 'Delete', admin_agency_path(agency), method: :delete, data: {confirm:"Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
