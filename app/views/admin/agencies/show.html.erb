<p>
  <strong>Agency:</strong>
  <%= @agency.name %>
</p>

<p>
  <strong>Office Number:</strong>
  <%= @agency.office_number %>
</p>

<p>
  <strong>Fax Number:</strong>
  <td><%= @agency.fax_number %></td>
</p>
<p>
  <strong>Address:</strong>
  <td><%= @agency.street_name %></td>
</p>
<p>
  <strong>Email:</strong>
  <td><%= @agency.email %></td>
</p>
<p>
  <strong>Website:</strong>
  <p><%= @agency.website %></p>
</p>
<p>
  <strong>Opening Hours:</strong>
  <td></td><%= @agency.opening_hours %></td>
</p>
<p>
  <strong>Category:</strong>

<p>
  <% @agency.categories.each do |category| %>
    <td><%= category.name %></td>
  <% end %>
</p>
<p>
  <strong>Criteria:</strong>
  <td><%= @agency.criteria %></td>
</p>
<p>
  <strong>Description:</strong>
  <td><%= @agency.description%></td>
</p>

<%= link_to 'Edit', edit_admin_agency_path(@agency), class: 'btn btn-primary'%>
<%= link_to 'Back Index', admin_agencies_path, class: 'btn btn-info'%>
