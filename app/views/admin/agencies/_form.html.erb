<% if @agency.errors.any? %>
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="alert alert-info col-md-6" role="alert">
        <h4>We have some errors here !</h4>
          <ul>
            <% @agency.errors.full_messages.each do |msg| %>
              <li class="mb-0"><%= msg %></li>
            <% end %>
          </ul>
        <hr>
      </div>
    </div>
  </div>
<% end %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to 'Dashboard', admin_root_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to 'Agencies', admin_agencies_path %>
    </li>
    <li class="breadcrumb-item active">Forms</li>
  </ol>
  <div class="row d-flex justify-content-center">
  <div class="col-md-7">
    <%= form_for [:admin, @agency] do |f| %>
    <div class="card mt-1">
      <div class="card-header">
        <h4>Forms</h4>
      <div class="card-body">
        <form>

          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :office_number, "Office Number" %>
            <%= f.text_field :office_number, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :fax_number, "Fax Number" %>
            <%= f.text_field :fax_number, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :street_name, "Address" %>
            <%= f.text_field :street_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :postal_code, "Address" %>
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "E-mail" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :website, "Website" %>
            <%= f.text_field :website, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :opening_hours, "Opening Hours" %>
            <%= f.text_field :opening_hours, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :criteria, "Criteria" %>
            <%= f.text_field :criteria, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description, "Description" %>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :area, "Area" %><br>
              <% Agency.areas.keys.each do |area| %>
                <%= f.radio_button :area, area %>
                <%= f.label area.to_sym %>&nbsp&nbsp
              <% end %>
          </div>

          <div class="form-group">
            <%= f.label :categories, "Categories: " %>
            <br>
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_hidden: false do |cb| %>
              <%= cb.label  do %>
                <%= cb.check_box %>
                <%= cb.text %>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-primary" %>
          </div>
        </form>
      </div>
      </div>
    </div>
     <% end %>
  </div>

  </div>
</div
