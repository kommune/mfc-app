<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Agencies</h1>
      <br>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @agencies.each do |agency| %>
          <tr>
            <td><%= agency.name %></td>
            <td><%= agency.category.humanize %></td>
            <td>
              <%= link_to 'Show', agency_path(agency) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>